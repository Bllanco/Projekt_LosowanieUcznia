<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="SystemLosowania_MartaBiala.MainPage">

    <StackLayout>

      
        <ListView x:Name="ListaUczniow" />
        
       
        <Entry x:Name="ImieUcznia" Placeholder="Wprowadź imię ucznia"/>
        <Button Text="Dodaj do klasy" Clicked="DodajDoKlasy_Clicked"/>
        <Button Text="Stwórz nową klasę" Clicked="StworzNowaKlase_Clicked"/>
        <Entry x:Name="NazwaNowejKlasy" Placeholder="Wprowadź nazwę nowej klasy"/>

        <ScrollView>
            <StackLayout x:Name="StackKlasy" VerticalOptions="StartAndExpand"/>
        </ScrollView>
    </StackLayout>

</ContentPage>

